CREATE TABLE Hero {
	heroID INTEGER PRIMARY KEY
	name TEXT
	hp INTEGER
	styrke INTEGER
	xp INTEGER
	level INTEGER
}

CREATE TABLE Kamp {
	kampID INTEGER PRIMARY KEY
	runder INTEGER
	heroID INTEGER FOREIGN KEY
	fjendeID INTEGER FOREIGN KEY
	heroVaabenID INTEGER FOREIGN KEY
}

CREATE TABLE Fjende {
	fjendeID INTEGER PRIMARY KEY
	navn TEXT
	hp INTEGER
	styrke INTEGER
	xpGivet INTEGER
}

CREATE TABLE Grotte {
	grotteID INTEGER PRIMARY KEY
	navn TEXT
	svearhedsgrad INTEGER
}

CREATE TABLE GrotteKamp {
	grotteKampID INTEGER PRIMARY KEY
	grotteID INTEGER FOREIGN KEY
	kampID INTEGER FOREIGN KEY
}

CREATE TABLE Vaaben {
	vaabenID INTEGER PRIMARY KEY
	navn TEXT
	skadestyrke INTEGER
	skade INTEGER
	holdbarhed INTEGER
}

CREATE TABLE HeroVaaben {
	heroVaabenID INTEGER PRIMARY KEY
	heroID INTEGER FOREIGN KEY
	vaabenID INTEGER FOREIGN KEY
	holdbarhed INTEGER
}

